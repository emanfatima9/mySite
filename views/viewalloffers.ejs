<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="/stylesheets/viewalloffers.css">
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
	<title>Eman's Site</title>
	<script type="text/javascript">
		function putImage(){
			document.getElementById("meme1").innerHTML = "<img src = 'images/fun/meme1.jpg' class = 'meme11'>"
			document.getElementById("meme2").innerHTML = "<img src = 'images/fun/meme2.jpg' class = 'meme22'>"
		}
	</script>
</head>
<body>
	<div class = "topdiv">
		<ul class = "mainnav">
			<li><a href="/addapost"><span><b>Add a Post</b></span></a></li>
			<li><a href="/home"><span><b>Home</b></span></a></li>
		</ul>
	</div>
	

	<div class = "intro">
		<h4><span class = "topStat">Made with <span class="love">♥</span></span><br>
		<span class = "botStat">Just for  <span class="love2">    EMAN</span></span></h4>
	</div>


	<% if (requests != null) { %> 
		<% requests.forEach(function(request){ %>
			<div class = "maincontainer">
				<div class="blur"></div>
				<div class = "imageDiv">
					<img src='/images/uploads/<%= request.image %>' id = "img">
				</div>
				<div class = "allText">
					<div class = "personname">
						<h1 class = "namee"><b><i><%= request.name %></i></b> <br><span class = "nickk">- <%= request.nick %></span></h1>
					</div>
					<div class = "message">
						<p class = "msgText"><span class = "comma">“</span> <%= request.description %> <span class="comma2">"</span></p>
					</div>
				</div>
			</div>
		<% }); %>
	<% } else{ %>
      <p style="color: red; margin: 10px 0 0 40px">*Sorry, no posts have been made so far.</p>
    <% } %>


    <div class = "extras">
    	<button onclick="putImage()" class ="button1">Click me :p</button>
    	<div id = "meme1"></div>
    	<div id = "meme2"></div>
    </div>
	
</body>
</html> 